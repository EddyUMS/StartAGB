<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:backgroundTint="#F1F1F1"
    android:backgroundTintMode="add"
    android:hapticFeedbackEnabled="false"
    tools:context=".MainActivity2"> <!--for script reference-->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="186dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158"
        app:srcCompat="@drawable/farmer_login_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:fontFamily="sans-serif"
        android:text="Powered by, \nAgridata"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.372" />

    <ImageView
        android:id="@+id/backbtn_from_fal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/back_button_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <LinearLayout
        android:id="@+id/PhoneNumColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/NumErrorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="tt"
            android:textAlignment="center" />

       <TableLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_horizontal">
           <TableRow>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="10sp"
                   android:clickable="false"
                   android:fontFamily="sans-serif"
                   android:text="+60"
                   android:textAlignment="center"
                   android:textSize="24sp"
                   android:textStyle="normal" />

               <EditText
                   android:id="@+id/farmer_phone_number_field"
                   android:layout_width="186dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:backgroundTint="#000000"
                   android:ems="10"
                   android:inputType="number"
                   android:letterSpacing="0.18"
                   android:textSize="24sp"/>
           </TableRow>
       </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:fontFamily="sans-serif"
            android:text="Enter your phone number to create an account"
            android:textAlignment="center" />

        <Button
            android:id="@+id/farmer_num_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Continue"
            android:layout_marginBottom="30dp"
            app:backgroundTint="#3BB777" />

        <TextView
            android:id="@+id/gotoLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Already have an account? Login here"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/PhoneNumColumnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647"
        tools:layout_editor_absoluteX="0dp">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textStyle="bold" />

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:clickable="false"
                    android:fontFamily="sans-serif"
                    android:text="+60"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/farmer_phone_number_fieldLogin"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#000000"
                    android:ems="10"
                    android:inputType="number"
                    android:letterSpacing="0.18"
                    android:textSize="24sp" />
            </TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:layout_marginTop="30dp"/>


            <EditText
                android:id="@+id/FillPassField"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textPassword" />

        </TableLayout>

        <Button
            android:id="@+id/farmer_num_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Login"
            app:backgroundTint="#3BB777" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/CodeVerColumn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        tools:layout_editor_absoluteX="0dp">


         <TextView
              android:id="@+id/CodeErrorMsg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="20dp"
              android:layout_marginRight="10dp"
              android:text="tt"
              android:textAlignment="center"
              android:padding="10sp"
              />


        <EditText
            android:id="@+id/code_verification_field"
            android:layout_width="231dp"
            android:layout_height="66dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#000000"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="xxxxxx"
            android:inputType="number"
            android:letterSpacing="1"
            android:maxLength="6"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:fontFamily="sans-serif"
            android:text="Please enter the verification number sent"
            android:textAlignment="center" />

        <Button
            android:id="@+id/farmer_code_resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Resend code"
            app:backgroundTint="#000000" />

        <Button
            android:id="@+id/farmer_code_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Submit"
            app:backgroundTint="#3BB777" />
    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>


