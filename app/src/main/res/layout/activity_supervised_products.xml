<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupervisedProducts">


    <LinearLayout
        android:visibility="visible"
        android:id="@+id/SVHomeLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="411dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/sv_bar" />


        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="499dp"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            android:stretchColumns="0,1">

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:height="30dp"
                    android:text="Sort by:"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Most recently updated"
                    android:textSize="16dp" />

                <RadioButton android:id="@+id/MostRecRB"></RadioButton>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="Oldest updated"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/OldRB"
                    android:layout_width="37dp"></RadioButton>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="#F1F1F1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/search_ico" />


            <EditText
                android:id="@+id/search_supervised_products_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Search"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/no_items_listed"
            android:layout_width="243dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/no_items_listed" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|bottom"
            android:clickable="true"
            app:srcCompat="@drawable/add" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/add_item_overlay"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_235037"
            android:orientation="vertical"
            android:padding="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/n1" />

                <LinearLayout
                    android:id="@+id/uploadImgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="137dp"
                    android:background="@drawable/grey_backround"
                    android:orientation="horizontal"
                    android:padding="50dp"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/Itemimg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:cropToPadding="false"
                        />

                    <TextView
                        android:id="@+id/setImgtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="Set Image"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/plustxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="-5dp"
                        android:text="+"
                        android:textSize="36dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Input Item Name"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/n2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="#f1f1f1"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/itemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Input Item Price"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/n3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="#f1f1f1"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="RM" />

                    <EditText
                        android:id="@+id/itemPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:padding="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="16dp"
                        android:hint="00.00"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="289dp"
                android:layout_height="42dp"
                android:layout_marginLeft="43dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*Price set on"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateSet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:padding="10dp"
                    android:text="DD/MM/YYYY"
                    android:layout_marginRight="10dp"/>

                <FrameLayout
                    android:id="@+id/test_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Add tags"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/n4" />

                <LinearLayout
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="#f1f1f1"
                    android:padding="0dp">

                    <EditText
                        android:id="@+id/itemTags"
                        android:layout_width="219dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:hint="fruit, apple, commodity"
                       />


                </LinearLayout>

                <Button
                    android:id="@+id/add_tag_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="#60FF8C"
                    android:layout_weight="1"
                    android:text="+"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Set Location"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/n5" />

                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f1f1"
                    android:orientation="horizontal"
                    android:padding="0dp">

                    <Spinner
                        android:id="@+id/district_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:scrollbars="vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#f1f1f1"
                    android:padding="0dp">

                    <Spinner
                        android:id="@+id/area_spinner"
                        android:layout_width="80dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:scrollbars="vertical"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#f1f1f1"
                android:gravity="center"
                android:padding="0dp">

                <EditText
                    android:id="@+id/zipCode"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Zip Code"
                    android:padding="10dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">
                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:backgroundTint="#FF0030"
                    android:layout_marginRight="100dp"/>
                <Button
                    android:id="@+id/Add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add +"
                    android:backgroundTint="#60FF8C"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
